# Copy this file to .env and set a valid PostgreSQL connection string
# e.g. for local Postgres
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/multilang_courses?schema=public"

# For Neon/Render/Supabase/ElephantSQL etc.
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB_NAME?schema=public&pgbouncer=true&connection_limit=1"

DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public"

# NextAuth config
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-a-strong-random-secret"

# Stripe (test)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Currency (optional overrides per locale)
DEFAULT_CURRENCY="USD"
CURRENCY_EN="USD"
CURRENCY_FA="IRR"

# Email (optional)
EMAIL_ENABLED="false"
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="CourseHub <no-reply@example.com>"

# CSRF origin allowlist (comma-separated), exact matches only
ALLOWED_ORIGINS="http://localhost:3000"

# App branding (optional)
APP_NAME="CourseHub"