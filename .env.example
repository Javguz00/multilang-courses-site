# Copy this file to .env and set a valid PostgreSQL connection string
# e.g. for local Postgres
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/multilang_courses?schema=public"

# For Neon/Render/Supabase/ElephantSQL etc.
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB_NAME?schema=public&pgbouncer=true&connection_limit=1"

DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public"

# NextAuth config
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-a-strong-random-secret"

# Stripe (test)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Zarinpal (Iran domestic gateway)
# Set PAYMENT_PROVIDER="zarinpal" to use this provider (default is Stripe)
# Amounts are expected in Tomans (IRR without the last zero). Ensure your course prices are set accordingly when using Zarinpal.
PAYMENT_PROVIDER="stripe"
ZARINPAL_MERCHANT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
ZARINPAL_SANDBOX="true"

# Public site URL for absolute links and SEO
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Analytics (optional, choose one provider below)
# Google Analytics
# NEXT_PUBLIC_ANALYTICS="ga"
# NEXT_PUBLIC_GA_ID="G-XXXXXXXX"
# Matomo
# NEXT_PUBLIC_ANALYTICS="matomo"
# NEXT_PUBLIC_MATOMO_URL="https://matomo.example.com"
# NEXT_PUBLIC_MATOMO_SITE_ID="1"

# Currency (optional overrides per locale)
DEFAULT_CURRENCY="USD"
CURRENCY_EN="USD"
CURRENCY_FA="IRR"

# Email (optional)
EMAIL_ENABLED="false"
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="CourseHub <no-reply@example.com>"

# CSRF origin allowlist (comma-separated), exact matches only
ALLOWED_ORIGINS="http://localhost:3000"

# App branding (optional)
APP_NAME="CourseHub"